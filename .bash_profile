export PATH="/usr/local/bin:$PATH"

# -------------------------------
# General Aliases
# -------------------------------
alias ll="colorls -lah"                          # List all files in long format
alias ls="colorls -lh"                       # List in short format
alias cl="clear"                           # Clear the terminal
alias grep="grep --color=auto"             # Colorize grep output
alias mkdir="mkdir -p"                     # Create parent directories if needed

# -------------------------------
# rm -rf Aliases
# -------------------------------
alias del="rm -rf"                        # Basic alias for rm -rf

